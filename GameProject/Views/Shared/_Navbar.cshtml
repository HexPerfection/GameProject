@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<nav class="navbar navbar-expand-lg px-2">
    <a class="navbar-brand" href="/">Game Site</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse d-inline-flex justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
            </li>
            @if (User.Identity.IsAuthenticated || HttpContextAccessor.HttpContext.Request.Cookies[".AspNetCore.Cookies"] != null)
            {
                <li class="nav-item">
                    <a class="btn btn-link nav-link" href="@Url.Action("Index", "Game")">Games</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-link nav-link" href="@Url.Action("Index", "Account")">My profile</a>
                </li>
                <li class="nav-item">
                    <form class="form-inline" method="post" action="/Account/Logout">
                        <button type="submit" class="btn btn-link nav-link">Logout</button>
                    </form>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="btn btn-link nav-link" href="/Home/Login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-link nav-link" href="/Home/Signup">Register</a>
                </li>
            }
        </ul>
    </div>
</nav>

