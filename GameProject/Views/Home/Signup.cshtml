@model GameProject.Models.SignupViewModel

@{
    ViewData["Title"] = "Sign Up";
}

<section class="h-100 gradient-form" style="background-color: #A499B3;">
    <div class="container py-5 h-100 my-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">
                                <div class="text-center">
                                    <img src="https://logowik.com/content/uploads/images/gamepad9349.jpg" style="width: 185px;" alt="logo">
                                </div>
                                <form method="post" action="/Account/Signup">
                                    @Html.AntiForgeryToken()
                                    <b style="font-size: 20px;">Sign up</b>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="username-input">Username</label>
                                        <input type="text" id="username-input" class="form-control" name="username" placeholder="Username..." required />
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label for="password-input">Password:</label>
                                        <input type="password" class="form-control" id="password-input" name="password" placeholder="Password..." required>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label for="confirm-password-input">Confirm Password:</label>
                                        <input type="password" class="form-control" id="confirm-password-input" name="confirmPassword" placeholder="Repeat password..." required>
                                    </div>

                                    <div class="text-danger">@TempData["error"]</div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="submit">
                                            Register
                                        </button>
                                    </div>

                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2">Already have an account?</p>
                                        <button type="button" class="btn btn-outline-primary">Log in</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-black px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4">Welcome to our game platform!</h4>
                                <p class="small mb-0">
                                    Create your account below to join the fun. By signing up, you'll be able to access our wide range of games and compete with players from all over the world. Don't miss out on the excitement – sign up now!
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
